{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "CommonJS",
    "target": "ES2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "build",
    "resolveJsonModule": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
